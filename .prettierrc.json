{
  "trailingComma": "es5",
  "tabWidth": 2,
  "semi": true,
  "singleQuote": true,
  "overrides": [
    {
      "files": "*.ts",
      "options": {
        "semi": true
      }
    },
    {
      "files": "*.tsx",
      "options": {
        "semi": true
      }
    },
    {
      "files": "*.scss",
      "options": {
        "parser": "scss",
        "scss": {
          "singleQuote": false,
          "selectorSeparator": "newline"
        }
      }
    }
  ]
}
